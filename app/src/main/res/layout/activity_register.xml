<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivLogLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:background="@color/colorPrimary"
                android:contentDescription="@string/uni_text"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/uni_logo" />

            <TextView
                android:id="@+id/ivSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:background="@color/colorPrimaryDark"
                android:fontFamily="@font/promptregular"
                android:padding="8dp"
                android:text="Transport Facility Registration"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioMain"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/et_bg_no_padding"
                    android:buttonTint="@color/colorAccent"
                    android:drawableStart="@drawable/student_icon"
                    android:text=" Student"
                    android:textSize="12dp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/et_bg_no_padding"
                    android:buttonTint="@color/colorAccent"
                    android:drawableStart="@drawable/teacher_icon"
                    android:text=" Faculty"
                    android:textSize="12dp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/et_bg_no_padding"
                    android:buttonTint="@color/colorAccent"
                    android:drawableStart="@drawable/teacher_icon"
                    android:text=" Guardian"
                    android:textSize="12dp" />


            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:layout_marginRight="@dimen/margin_5dp"
                android:layout_marginBottom="2dp"
                android:orientation="vertical"
                android:padding="5dp">


                <EditText
                    android:id="@+id/registerFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/et_bg"
                    android:drawableStart="@drawable/ic_name"
                    android:hint=" Name"
                    android:inputType="textCapWords"
                    android:singleLine="true" />


                <EditText
                    android:id="@+id/registerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/et_bg"
                    android:drawableStart="@drawable/email"
                    android:hint=" Email"
                    android:inputType="textEmailAddress" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/et_bg"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/registerPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/et_bg_no_padding"
                        android:drawableStart="@drawable/ic_pass"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:maxLength="30"
                        android:singleLine="true" />

                    <ImageButton
                        android:id="@+id/show_pass_icon"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="-40dp"
                        android:contentDescription="Show/Hide Password"
                        app:srcCompat="@drawable/ic_visibility" />
                </LinearLayout>


                <EditText
                    android:id="@+id/registerRollNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/et_bg"
                    android:drawableStart="@drawable/id_number"
                    android:hint=" ID #"
                    android:inputType="textCapWords"
                    android:singleLine="true" />


                <EditText
                    android:id="@+id/registerMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/et_bg"
                    android:drawableStart="@drawable/ic_smartphone"
                    android:hint=" Mobile #"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/et_bg"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/registerUploadphoto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/et_bg_no_padding"
                        android:drawableStart="@drawable/ic_add_a_photo"
                        android:hint="@string/upload_picture"
                        android:stateListAnimator="@null" />

                    <ImageButton
                        android:id="@+id/show_upload_loading"
                        style="?android:buttonBarButtonStyle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:contentDescription="checkUploadOrNot"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_person" />
                </LinearLayout>

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_background_primary"
                    android:text="@string/register"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <ProgressBar
                    android:id="@+id/loadingSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>