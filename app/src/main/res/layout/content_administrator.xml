<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Administrator.AdministratorHome"
    tools:showIn="@layout/app_bar_administrator">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativelayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_home_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:contentDescription="@string/air_university"
                    android:scaleType="centerCrop"
                    android:src="@drawable/air_uni_view" />

                <TextView
                    android:id="@+id/txtview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_home_image"
                    android:background="@drawable/btn_bg_transparent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="@string/air_university_bus_tracking"
                    android:textColor="@color/white" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/checkbuses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_5dp"
                    android:background="@drawable/round_btn"
                    android:drawableStart="@drawable/bus_logo_db"
                    android:drawablePadding="20dp"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/margin_5dp"
                    android:text="Check Buses"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size"
                    android:theme="@style/Theme.MaterialComponents.Light" />

                <Button
                    android:id="@+id/view_modify_busroute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_5dp"
                    android:background="@drawable/round_btn"
                    android:drawableStart="@drawable/bus_routes"
                    android:drawablePadding="20dp"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/margin_5dp"
                    android:text="Check Routes"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size" />

                <Button
                    android:id="@+id/complaintform"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_5dp"
                    android:background="@drawable/round_btn"
                    android:drawableStart="@drawable/complain"
                    android:drawablePadding="20dp"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/margin_5dp"
                    android:text="Check Complains"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size" />

                <Button
                    android:id="@+id/view_modify_users"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_5dp"
                    android:background="@drawable/round_btn"
                    android:drawableStart="@drawable/guardian"
                    android:drawablePadding="20dp"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/margin_5dp"
                    android:text="View Users"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size" />

                <Button
                    android:id="@+id/emergency_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_5dp"
                    android:background="@drawable/round_btn"
                    android:drawableStart="@drawable/alert_emergency"
                    android:drawablePadding="20dp"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/margin_5dp"
                    android:text="Manage Emergency Requests"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/feedbackBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_5dp"
                    android:background="@drawable/round_btn"
                    android:drawableStart="@drawable/feedback"
                    android:drawablePadding="20dp"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/margin_5dp"
                    android:text="Check Feedbacks"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size" />

                <Button
                    android:id="@+id/feelist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_5dp"
                    android:background="@drawable/round_btn"
                    android:drawableStart="@drawable/finance"
                    android:drawablePadding="20dp"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/margin_5dp"
                    android:text="Check FEE Record"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size" />

                <Button
                    android:id="@+id/user_approval_board"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_5dp"
                    android:background="@drawable/round_btn"
                    android:drawableStart="@drawable/approval_board"
                    android:drawablePadding="20dp"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/margin_5dp"
                    android:text="User Approval Board"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text_size" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>