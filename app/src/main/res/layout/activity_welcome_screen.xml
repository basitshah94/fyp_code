<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentBottom="true"
    android:background="@color/app_background_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/uni_text"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/uni_logo" />

        <TextView
            android:id="@+id/ivSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_10dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/promptregular"
            android:padding="8dp"
            android:text="@string/uni_text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_10dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/promptregular"
            android:padding="8dp"
            android:text="Usertype"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="12dp">

            <RadioButton
                android:id="@+id/administrator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5dp"
                android:background="@drawable/et_bg_no_padding"
                android:buttonTint="@color/colorAccent"
                android:checked="true"
                android:drawableStart="@drawable/management_icon"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="Admin"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/driver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5dp"
                android:background="@drawable/et_bg_no_padding"
                android:buttonTint="@color/colorAccent"
                android:drawableStart="@drawable/driver_icon"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="Driver"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/guardian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5dp"
                android:background="@drawable/et_bg_no_padding"
                android:buttonTint="@color/colorAccent"
                android:drawableStart="@drawable/guardian_icon"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="Guardian"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/commuter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5dp"
                android:background="@drawable/et_bg_no_padding"
                android:buttonTint="@color/colorAccent"
                android:drawableLeft="@drawable/commuter_icon"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="Commuter"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/guest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_5dp"
                android:background="@drawable/et_bg_no_padding"
                android:buttonTint="@color/colorAccent"
                android:drawableStart="@drawable/student_icon"
                android:drawablePadding="20dp"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:text="Guest"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RadioGroup>

        <Button
            android:id="@+id/nextLogin"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>